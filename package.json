{
  "name": "polkax402",
  "version": "1.0.0",
  "description": "Typescript SDK for x402 on Polkadot",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./client": {
      "import": {
        "types": "./dist/client/index.d.ts",
        "default": "./dist/client/index.js"
      },
      "require": {
        "types": "./dist/client/index.d.cts",
        "default": "./dist/client/index.cjs"
      }
    },
    "./server": {
      "import": {
        "types": "./dist/server/index.d.ts",
        "default": "./dist/server/index.js"
      },
      "require": {
        "types": "./dist/server/index.d.cts",
        "default": "./dist/server/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "clean": "if exist dist rmdir /s /q dist",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "account:generate": "node scripts/generate-account.js",
    "account:inspect": "node scripts/inspect-account.js",
    "account:balance": "node scripts/check-balance.js",
    "contract:build": "cd contracts && cargo contract build --release",
    "contract:test": "cd contracts && cargo test",
    "contract:deploy": "node scripts/deploy-contract.js",
    "contract:deploy:paseo": "cross-env DEPLOY_NETWORK=paseo node scripts/deploy-contract.js",
    "contract:deploy:shibuya": "cross-env DEPLOY_NETWORK=shibuya node scripts/deploy-contract.js",
    "facilitator": "tsx src/examples/facilitator-local.ts",
    "server": "tsx src/examples/server-simple.ts",
    "client": "tsx src/examples/client-simple.ts",
    "explorer": "tsx src/explorer/api.ts",
    "dev": "npm run build && concurrently \"npm:facilitator\" \"npm:server\"",
    "example:full": "npm run build && npm run facilitator & npm run server & sleep 3 && npm run client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HTTPayer/dotx402.git"
  },
  "keywords": [
    "x402",
    "polkadot",
    "payment",
    "http",
    "substrate"
  ],
  "author": "HTTPayer",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/HTTPayer/dotx402/issues"
  },
  "homepage": "https://github.com/HTTPayer/dotx402#readme",
  "dependencies": {
    "@polkadot/api": "^16.5.2",
    "@polkadot/api-contract": "^16.5.2",
    "@polkadot/keyring": "^13.5.8",
    "@polkadot/util": "^13.5.8",
    "@polkadot/util-crypto": "^13.5.8",
    "claude": "^0.1.1",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/swagger-ui-express": "^4.1.8",
    "cross-env": "^10.1.0",
    "tsup": "^8.5.1",
    "tsx": "^4.20.6",
    "typescript": "^5.7.2"
  }
}
